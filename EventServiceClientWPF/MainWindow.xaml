<Window x:Class="EventServiceClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventServiceClientWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Event Name :" Margin="5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="EventNameTextBox" Margin="5"/>
        <Button Grid.Row="0" Grid.Column="2" Content="Get Event" Margin="5" Click="EventButton_Click" />
        <TextBox Grid.Row="1" Grid.ColumnSpan="3" Name="SelectedEventTextBox" Margin="5"/>

    </Grid>
</Window>
